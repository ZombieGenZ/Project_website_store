    function LoadQR(amount) {
        const data = {
            amount: amount
        }
        fetch('/API/getqr', {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json',
            },
            body: JSON.stringify(data),
            credentials: 'include'
          })
          .then(res => res.json())
          .then(resData => {
                if (resData.status) {
                    document.getElementById("qr").src = resData.url;
                }
          })
    }
    LoadQR(10000);
    function ChanageAmount() {
        let amount = document.getElementById("bank_amount").value;

        if (amount > 0 && amount !== "") {
            LoadQR(amount);
        }
        else {
            document.getElementById("amount").value = 100000;
            Swal.fire({
                icon: "error",
                title: "Oops...",
                text: `Số tiền phải lớn hơn 0`,
